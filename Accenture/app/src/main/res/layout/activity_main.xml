<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Admin"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="35dp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Employee"
        android:id="@+id/button_addNew"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Trip"
        android:id="@+id/button_removeTrip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_search"
        android:hint="Search by employee name"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignTop="@+id/editText_search"
        android:layout_alignBottom="@+id/editText_search"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText_search"
        android:src="@drawable/search_24"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_above="@+id/button_addNew"
        android:layout_below="@+id/editText_search"
        android:fillViewport="true">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/scrollView"
            android:layout_above="@+id/button_addNew">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:dividerPadding="10dp"
                android:paddingStart="10dp"
                android:showDividers="beginning|middle|end"
                android:clickable="true">

                <TableRow android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:id="@+id/headerRow"
                    android:minHeight="20dp"
                    android:showDividers="beginning|middle|end">
                <TextView
                android:id="@+id/textView_Sno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sno"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />
                <TextView
                android:id="@+id/textView_EmpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Name"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />
                <TextView
                android:id="@+id/textView_TrpSrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />
                <TextView
                android:id="@+id/textView_TrpEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />
                <TextView
                android:id="@+id/textView_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Journey"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />
                <TextView
                android:id="@+id/textView_Days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />
                </TableRow>

                <TableRow android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:id="@+id/tableRow1"
                    android:showDividers="beginning|middle|end">
                    <TextView
                        android:id="@+id/textView_Sno_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_EmpName_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pratyum Jagan"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                       />
                    <TextView
                        android:id="@+id/textView_TrpSrt_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Singapore"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_TrpEnd_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bali"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                         />
                    <TextView
                        android:id="@+id/textView_Date_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28-8-2015"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                         />
                    <TextView
                        android:id="@+id/textView_Days_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                         />
                </TableRow>

                <TableRow android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:id="@+id/tableRow2"
                    android:showDividers="beginning|middle|end">
                    <TextView
                        android:id="@+id/textView_Sno_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_EmpName_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manav Mehra"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_TrpSrt_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delhi"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_TrpEnd_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Singapore"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_Date_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30-8-2015"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_Days_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                </TableRow>

                <TableRow android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:id="@+id/tableRow3"
                    android:showDividers="beginning|middle|end">
                    <TextView
                        android:id="@+id/textView_Sno_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_EmpName_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utsav Garg"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_TrpSrt_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="United States"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_TrpEnd_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="London"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_Date_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1-9-2015"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_Days_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                </TableRow>
                <TableRow android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:id="@+id/tableRow4"
                    android:showDividers="beginning|middle|end">
                    <TextView
                        android:id="@+id/textView_Sno_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_EmpName_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yu Kian"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_TrpSrt_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Singapore"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_TrpEnd_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="California"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_Date_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3-9-2015"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                    <TextView
                        android:id="@+id/textView_Days_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:layout_marginLeft="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>

